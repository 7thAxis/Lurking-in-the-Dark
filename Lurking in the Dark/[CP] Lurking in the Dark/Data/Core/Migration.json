        {
            "LogName": "Sen's Crocus ID change for LA",
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
            "{{ModID}}_TriggerActions.FurnitureIDMirgration.1": {
                "Id": "{{ModID}}_TriggerActions.FurnitureIDMirgration",
                "Trigger": "DayStarted",
                "HostOnly": true,
                "Actions": [                
                    "Pathoschild.ContentPatcher_MigrateIds Items (F)LitD_SenPortrait (F){{ModID}}_Furniture.SenPortrait",
                    "Pathoschild.ContentPatcher_MigrateIds Items (F)LitD_SenBabyPhoto (F){{ModID}}_Furniture.SenBabyPhoto"
                    ]
                }
            }
        },
        {
            "LogName": "Sen's Crocus ID change for LA",
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
            "{{ModID}}_TriggerActions.CrocusIDMigration.1": {
                "Id": "{{ModID}}_TriggerActions.CrocusIDMigration",
                "Trigger": "DayStarted",
                "HostOnly": true,
                "Condition": "PLAYER_HAS_SEEN_EVENT Current {{ModID}}_Events.SenS.14h",
                "Actions": [                
                    "Pathoschild.ContentPatcher_MigrateIds Items (O)7thAxis.LitD.CP_Items.SensCrocus (O){{ModID}}_Items.SensCrocus",
                    "Pathoschild.ContentPatcher_MigrateIds Items (O)7thAxis.LitD.CP_Items.SensCrocusSeeds (O){{ModID}}_Items.SensCrocusSeeds"
                    ]
                }
            }
        },
        {
            "LogName": "Quest Fixer",
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
                "{{ModID}}_TriggerActions.QuestFixerLitD.1": {
                    "Id": "{{ModID}}_TriggerActions.QuestFixerLitD",
                    "Trigger": "DayStarted",
                    "Actions": [ 
                        "AddQuest 7thAxis.LitD_Quests.AGardenForSen",
                        "RemoveQuest 10770100"
                     ]
                }
            },
            "When": { "HasActiveQuest: |contains=10770100": true }
        },
        {
            "LogName": "Outdated Translation Softlock Fixer",
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
                "{{ModID}}_TriggerActions.TranslationSoftlockFix.1": {
                    "Trigger": "DayStarted",
                    "Id": "{{ModID}}_TriggerActions.TranslationSoftlockFix",
                    "Condition": "PLAYER_HAS_MAIL Current LitD_M_AGardenForSenComplete Any",
                    "Actions": [ 
                        "AddMail Current LitD_M_AGardenForSenComplete received",
                        "RemoveMail Current LitD_M_AGardenForSenComplete"
                     ]
                }
            }
        },
        {
            "LogName": "LitD Was Installed Flag",
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
                "{{ModID}}_TriggerActions.LitDWasInstalled.1": {
                    "Id": "{{ModID}}_TriggerActions.LitDWasInstalled",
                    "Trigger": "DayStarted",
                    "Actions": [ "AddMail Current LitD_M_LitDWasInstalled received" ]
                }
            }
        }
    ]
}